@model SAProject.Models.Product
@{
    ViewData["Title"] = "Chi tiết Sản phẩm";
    Layout = "_LayoutAdmin";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-info-circle me-2"></i>@ViewData["Title"]
    </h2>
    <div>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i>Sửa
        </a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">Thông tin sản phẩm</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-bordered">
                    <tr>
                        <th width="40%">ID:</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th>Tên sản phẩm:</th>
                        <td><strong>@Model.Name</strong></td>
                    </tr>
                    <tr>
                        <th>Giá:</th>
                        <td><span class="text-success fw-bold">@Model.Price.ToString("C")</span></td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-bordered">
                    <tr>
                        <th width="40%">Mô tả:</th>
                        <td>@(string.IsNullOrEmpty(Model.Description) ? "Không có mô tả" : Model.Description)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>