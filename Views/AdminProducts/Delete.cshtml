@model SAProject.Models.Product
@{
    ViewData["Title"] = "Xóa Sản phẩm";
    Layout = "_LayoutAdmin";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-danger">
        <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
    </h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Quay lại
    </a>
</div>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Xác nhận xóa</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h6 class="alert-heading">Cảnh báo!</h6>
            Bạn có chắc chắn muốn xóa sản phẩm này? Hành động này không thể hoàn tác.
        </div>

        <div class="row">
            <div class="col-md-6">
                <table class="table table-bordered">
                    <tr>
                        <th width="40%">ID:</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th>Tên sản phẩm:</th>
                        <td><strong>@Model.Name</strong></td>
                    </tr>
                    <tr>
                        <th>Giá:</th>
                        <td>@Model.Price.ToString("C")</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-bordered">
                    <tr>
                        <th width="40%">Mô tả:</th>
                        <td>@(string.IsNullOrEmpty(Model.Description) ? "Không có mô tả" : Model.Description)</td>
                    </tr>
                </table>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-1"></i>Xác nhận xóa
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>